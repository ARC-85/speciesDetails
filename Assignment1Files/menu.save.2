#!/bin/bash

echo
echo "-------------------------Main Menu-------------------------------"
PS3=$'\nWelcome. Please choose one of the above options (number 1-5): '$'\n'
options=("Add a new recording of a species `\n`" "Remove an existing species record" "Search for species" "Email recorder(s)" "Quit")
select choice in "${options[@]}"

do
	case $choice in
		"Add a new recording of a species")
			./add.sh
			;;

		"Remove an existing species record")
			./remove.sh
			;;

		"Search for species")
			./search.sh
			;;

		"Email recorder(s)")
			./email.sh
			;;

		"Quit")
			echo "Good bye!"
			break
			exit
			;;

		*) echo "Invalid option. Please enter a number 1-5";;
	esac
done
